<div class="row">
    <div class="col-xs-12 col-12 text-center">
        <h1>Eat The Burger!</h1>

    </div>

    <div class="col-xs-12 col-12 ">
          
        <div class="row">
            <div class="col-xs-6 col-6 text-center" >
               

                <div id="eat" >
                    <h2>Burgers in Cart !</h2>
                    {{#each burger }}
                    {{#unless devoured }}
                    {{> burgers/burger btnShow="true"}}
                    {{/unless}}
                    {{/each}}
                </div>
            </div>

            <div class="col-xs-6 col-6 text-center" >
                
                <div id="eaten"> 
                    <h2>Burgers Eaten!</h2>
                    {{#each burger}}
                    {{#if devoured}}
                    {{> burgers/burger btnShow="false"}}
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-12 text-center">
                <h2>Add a burger</h2>
                <form class="create-form">

                    <div class="form-group">
                        <label for="bu"></label>
                        <input type="text" id="bu" name="name">
                    </div>


                    <button class="addBurger" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
